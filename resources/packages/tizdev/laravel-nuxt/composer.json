{
    "name": "tizdev/laravel-nuxt",
    "description": "Nuxtjs framework integration for laravel",
    "type": "library",
    "require": {
        "laravel/framework": "^8.0|^9.0",
        "illuminate/support": "^8.0|^9.0"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.11",
        "squizlabs/php_codesniffer": "^3.6",
        "phpro/grumphp": "^1.8",
        "friendsofphp/php-cs-fixer": "^3.6",
        "pedrotroller/php-cs-custom-fixer": "^2.27"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Wayan Tisna",
            "email": "wayantisna74@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "lint:php-cs-fixer": "php-cs-fixer fix --dry-run --diff --ansi",
        "lint:phpcs": "phpcs . --colors",
        "lint:phpmd": "phpmd . ansi phpmd.xml",
        "lint": [
            "@lint:php-cs-fixer",
            "@lint:phpcs",
            "@lint:phpmd"
        ],
        "lint:fix": [
            "php-cs-fixer fix --ansi",
            "phpcbf . --colors"
        ],
        "lint:staged": "grumphp run --ansi"
    },
    "autoload": {
        "psr-4": {
            "TizDev\\LaravelNuxt\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "TizDev\\LaravelNuxt\\LaravelNuxtServiceProvider"
            ],
            "aliases": {
                "Nuxt": "TizDev\\LaravelNuxt\\Facades\\Nuxt"
            }
        }
    }
}
